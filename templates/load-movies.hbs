<div class="row">
    {{#each this}}
  <div class="col-md-4">

    <div class="thumbnail">
      <button type="button" class="btn btn-default btn-lg removeButton">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </button>
      <img src="{{Poster}}" alt="">
      <div class="caption">
        
          <h3>{{Title}}</h3>
        
        
          <h4>{{Year}}</h4>
        
        
          <h4>{{Type}}</h4>
        
        <div class="btn-group">
          {{#if towatch}}
            <button type="button" class="watched" class="btn btn-primary" data-imdbid="{{imdbID}}"  data-watchstatus="watched">WATCHED</button>
          {{else}}
            <button type="button" class="towatch" class="btn btn-danger" data-imdbid="{{imdbID}}" data-watchstatus="towatch">ADD</button>
          {{/if}}
        </div>
      </div>
    </div>

  </div>
  {{/each}}

</div>




